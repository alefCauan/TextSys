{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker Build Servidor Mestre",
            "type": "shell",
            "command": "docker build -f src/server/master/Dockerfile -t servidor-mestre .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Docker Run Servidor Mestre",
            "type": "shell",
            "command": "docker run -p 8080:8080 servidor-mestre",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
